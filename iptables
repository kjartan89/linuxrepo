#!/bin/bash

# her Oppdaterer vi pakkelisten
echo "Oppdaterer pakkelisten..."
sudo apt update

# Installer iptables og iptables-persistent
echo "Installerer iptables og iptables-persistent..."
sudo apt install -y iptables iptables-persistent

#tillat SSH (port 22) og blokkere alt annet (justeres etter behov)
echo "Setter opp grunnleggende regler..."
sudo iptables -F  # TÃ¸m eksisterende regler
sudo iptables -P INPUT DROP
sudo iptables -P FORWARD DROP
sudo iptables -P OUTPUT ACCEPT

# Tillat lokal trafikk
sudo iptables -A INPUT -i lo -j ACCEPT

# Tillat SSH-tilkobling
sudo iptables -A INPUT -p tcp --dport 22 -j ACCEPT

# Lagre reglene slik at de varer etter restart
echo "Lagrer regler..."
sudo netfilter-persistent save

echo "iptables er konfigurert og regler er lagret."
